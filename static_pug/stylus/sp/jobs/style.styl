@import '../partial/_common'
@import '../common/css/_swiper'

.mod-info
	padding 0.6rem 1rem
	.wrap
		display flex
		align-items center
	.info-ttl
		background-color #e6dabd
		width 4.8rem
		height 2.3rem
		text-align center
		line-height 2.4rem
		font-size 1.1rem
		color ttlBaseColor
	.info-date
		margin 0.6rem
		color #ee4e00
	.info-txt
		overflow hidden
		position relative
		width calc(100% - 13rem)
		&::before
			content ""
			display inline-block
			white-space nowrap
	.marquee
		position absolute
		top 0
		left 0
		white-space nowrap
		animation marquee 10s infinite

@keyframes marquee
	0%
		transform translate(0)
	100%
		transform translate(-100%)


.f-about
	margin-top 3.4rem
	.ttl
		width 15.75rem
	.list
		display flex
		flex-wrap wrap
	.item
		width 50%
		margin-top 1rem
		padding 13.5rem 1rem 1rem
	for $num in (1..6)
		.item:nth-child({$num})
			background url("img/about/img_" + $num + ".png") 0 0 no-repeat
			background-size 18rem auto
	.item-ttl
		text-align center
		font-size 1.4rem
		font-weight bold
		color ttlBaseColor
	.item-txt
		margin-top 1.2rem
		line-height 1.4
		font-size 1.1rem


.f-interview
	overflow hidden
	margin-top 2rem
	padding-bottom 5rem
	background url("img/interview/bg_main.png") 0 0 no-repeat
	background-size cover
	.ttl
		width 18.6rem
		margin-top 3.6rem
		margin-bottom 3.1rem
	.body
		position relative
		margin 1rem
	.item-anchor
		display block
		position relative
	.item-caption
		display flex
		align-items center
		height 3.7rem
		padding 0.5rem 1.5rem
		background-color #ffaa46
		color ttlBaseColor
		white-space nowrap
	.item-caption-name-ja
		font-size 1.7rem
		font-weight bold
	.item-caption-name-en
		margin-left 1.5rem
		font-size 1.1rem
		color #fff
	.item-caption-role
		margin-left auto
		font-size 1rem
		font-weight bold
	.btn-readMore
		margin-top 17rem
	.thumContainer
		position absolute
		left 0
		bottom 8.5rem
	.thumList
		margin-top 2.8rem
	for $num in (1..6)
		.thumList-item:nth-child({$num})
			background url("http://placehold.it/108x222.png") 0 0 no-repeat
			background-size 5.4rem auto

	.swiper-container
		overflow-y visible
	.swiper-button-prev,
	.swiper-button-next
		top 10rem
		width 1rem
		height 1.6rem
		margin-top 0
		background none
	.swiper-button-prev
		left 1.5rem
	.swiper-button-next
		right 1.5rem
	// thum
	.swiper-slide-visible
		img
			opacity 1
	.swiper-slide-thumb-active
		img
			opacity 0

