/* ============================================================================

		header

============================================================================ */
path = "/sp/common/img/"

.l-header
	box-shadow 0 2px 2px rgba(0,0,0,0.5)
	.wrap
		display flex
	.wrap-l
		display flex
		align-items center
		width calc(100% - 4.7rem)
	.logo
		height 3rem
		margin 0.8rem 1rem
	.ttl
		margin-left 0.2rem
		font-size 1.2rem
		font-weight bold
	.wrap-r
		width 4.7rem
		height 4.7rem
		background-color #e0ddc5
		text-align center
	.menu
		width 100%
		height 100%
		background-color transparent
	.menu-line
		display inline-block
		position relative
		width 2rem
		height 0.15rem
		background-color #e76d00
		&::before,
		&::after
			content ""
			display inline-block
			position absolute
			left 0
			right 0
			width 2rem
			height 0.15rem
			background-color #e76d00
		&::before
			top -0.6rem
		&::after
			bottom -0.6rem
	.menu-text
		display block
		padding-top 1.1rem
		font-size 0.9rem


.overLay
	position fixed
	z-index 1000
	top 0
	right -100%
	width 100%
	height 100%
	background-color rgba(0,0,0,0.5)
	&.is-active
		display block
		right 0

.l-nav
	position fixed
	z-index 1001
	min-width 24rem
	background-color #fff
	top 0
	right -100%
	transition all 0.3s
	&.is-active
		display block
		position absolute
		right 0
	.nav-head
		display flex
		padding 1.5rem
		background-color #dcdcdc
	.nav-head-ttl
		height 1.8rem
		padding-left 2.3rem
		line-height 1.9rem
		font-size 1.5rem
		font-weight bold
		color ttlBaseColor
	.nav-head-toTop
		margin-left auto
		font-size 1.5rem
		font-weight bold
		color #717171
	.item-anchor
		display block
		position relative
		padding 1.2rem 1.5rem
		border-bottom 1px solid #f19149
		&::before
			content ""
			display block
			position absolute
			top 50%
			right 1.5rem
			transform translateY(-50%)
			width 0.7rem
			height 1.2rem
			background url(path ico_arr_grad.png) right center no-repeat
			background-size 0.7rem auto
	.item-interview-arr
		&::before
			transform translateY(-50%) rotate(-90deg)
		&.is-active
			&::before
				transform translateY(-50%) rotate(90deg)
	.item-anchor-text-ja,
	.item-anchor-name
		font-size 1.4rem
		font-weight bold
		color ttlBaseColor
	.item-anchor-text-en,
	.item-anchor-role
		margin-top 0.5rem
		font-size 1rem
		color #f19149
	.list-interview
		display none
	.item-anchor-interview
		padding-left 3rem
	.btn-newEntryInNav,
	.btn-halfEntryInNav
		display block
		height 4rem
		margin 1.5rem
		text-align center
		line-height 4.1rem
		font-size 1.5rem
		font-weight bold
		color #fff
		letter-spacing 0.2rem
	.btn-newEntryInNav
		background-color #f8b551
	.btn-halfEntryInNav
		background-color #eb6100
	.btn-entryInNav-text
		position relative
		padding-right 6rem
		&::before,
		&::after
			content ""
			display block
			position absolute
			top 50%
			right 0
		&::before
			transform translateY(-50%) rotate(45deg)
			width 1rem
			height 1.1rem
			border-top 0.1rem solid #fff
			border-right 0.1rem solid #fff
		&::after
			width 3.5rem
			height 0.1rem
			margin-top -0.1rem
			margin-right -0.1rem
			background-color #fff
	.btn-close
		display block
		width 10rem
		height 2.5rem
		margin 2rem auto
		border 1px solid #c9c9c9
		background-color transparent
		line-height 2.5rem
		color #717171
	.btn-close-text
		position relative
		padding-left 1.5rem
		font-size 1rem
		&::before,
		&::after
			content ""
			position absolute
			top 50%
			left 0
			width 1rem
			height 0.1rem
			background-color #717171
		&::before
			transform translateY(-50%) rotate(45deg)
		&::after
			transform translateY(-50%) rotate(-45deg)

/* ============================================================================

		footer

============================================================================ */
.l-footer
	margin-top 2.5rem
	overflow hidden
	text-align center
	.pageToTop
		position relative
		margin-bottom 0.5rem
		padding-top 5rem
		background-color transparent
		font-size 1.2rem
		&::before
			content ""
			position absolute
			top 0
			left 50%
			transform translateX(-50%)
			width 0.1rem
			height 3.4rem
			background-color #434343
	.logo
		width 12rem
		margin 2rem auto
	.copyright
		display block
		margin 1.2rem 0
		font-size 1.2rem
		color #949494
	.img-health
		margin 0.8rem
		width 16.2rem

/*
	トップへ戻る
------------------------------------------------- */

.mod-pageToTop
	opacity 0
	position fixed
	z-index 49
	right 10px
	bottom 10px
	width 35px
	height 35px
	background-color transparent
	transition all 0.3s
	&.is-active
		opacity 1


.btn-readMore
	display block
	position relative
	width 28rem
	height 5.5rem
	margin-right auto
	margin-left auto
	background linear-gradient(to right, #ffc955 0%, #f69289 100%)
	text-align center
	line-height 5.5rem
	&::before
		content ""
		position absolute
		top 1px
		left 1px
		width calc(100% - 2px)
		height calc(100% - 2px)
		background-color #fff
.btn-readMore-txt
	position relative
	padding-right 3rem
	font-size 1.8rem
	font-weight bold
	&::after
		content ""
		position absolute
		top 50%
		right 0
		transform translate(0, -50%)
		width 1rem
		height 1.6rem
		background url(path ico_arr_grad.png) 0 0 no-repeat
		background-size cover


.btn-newEntry,
.btn-halfEntry
	display block
	height 5.5rem
	margin 1.5rem
	box-shadow 0 1px 1px rgba(0,0,0,0.2)
	text-align center
	line-height 5.6rem
	font-size 1.5rem
	font-weight bold
	color #fff
	letter-spacing 0.1rem
.btn-newEntry
	background-color #f8b551
.btn-halfEntry
	background-color #eb6100

.btn-entry-txt
	position relative
	padding-right 5rem
	&::before,
	&::after
		content ""
		display block
		position absolute
		top 50%
		right 0
	&::before
		transform translateY(-50%) rotate(45deg)
		width 1.7rem
		height 1.8rem
		border-top 0.1rem solid #fff
		border-right 0.1rem solid #fff
	&::after
		width 2.8rem
		height 0.1rem
		margin-top -0.1rem
		margin-right -0.2rem
		background-color #fff
	span
		vertical-align middle
		font-size 2.3rem